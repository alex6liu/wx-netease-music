/**index.wxss**/
.header {
  display: flex;
  background: #c20c0c;
  align-items: center;
}

.search {
  display: flex;
  align-items: center;
  background: #e8e8e8;
  border-radius: 50rpx;
  margin: 15rpx;
  width: 80%;
  padding: 0 10rpx;
}

.musiclist, .mic {
  width: 50rpx;
  height: 50rpx;
}

.index-category {
  color: black;
  display: flex;
  justify-content: space-around;
}

.category-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-container {
  background: #c20c0c;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.fm, .recommend, .playlist, .board {
  width: 50rpx;
  height: 50rpx;
}

.fm-text, .recommend-text, .playlist-text, .board-text {
  font-size: 25rpx;
}

.line {
  width: 100%;
  height: 2rpx;
  background-color: #D8D8D8;
}

.recommend-title {
  display: flex;
  align-items: center;
  font-size: 35rpx;
  font-weight: bold;
}

.right-arrow {
  width: 30rpx;
  height: 30rpx;
}