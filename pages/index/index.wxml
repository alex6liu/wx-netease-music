<!--index.wxml-->
<view class="container">
  <view class="header">
    <image src="../../assets/icon/mic.png" class="mic"></image>
    <view class="search">
      <icon type="search" size="15"></icon>
      <input placeholder="musci name" bindinput="bindSearchInput"/>
    </view>
    <image src="../../assets/icon/musiclist.png" class="musiclist"></image>
  </view>

  <view class="index-category">
    <view class="category-container">
      <view class="image-container">
        <image src="../../assets/icon/fm.png" class="fm"></image>
      </view>
      <text class="fm-text" bindtap='bindFmPage'>私人FM</text>
    </view>
    <view class="category-container">
      <view class="image-container">
        <image src="../../assets/icon/recommend.png" class="recommend"></image>
      </view>
      <text class="recommend-text" bindtap='bindRecommend'>每日推荐</text>
    </view>
    <view class="category-container">
      <view class="image-container">
        <image src="../../assets/icon/playlist.png" class="playlist"></image>
      </view>
      <text class="playlist-text" bindtap='bindPlaylist'>歌单</text>
    </view>
    <view class="category-container">
      <view class="image-container">
        <image src="../../assets/icon/board.png" class="board"></image>
      </view>
      <text class="board-text" bindtap='bindBoardPage'>排行榜</text>
    </view>
  </view>
  <view class="line"></view>
  <view class="recommend-container">
    <view class="recommend-title">
      <text>推荐歌单</text>
      <image src="../../assets/icon/right-arrow.png" class="right-arrow"></image>
    </view>
  </view>
</view>
