/* pages/phoneLogin/phoneLogin.wxss */
.phoneLogin-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-container {
  display: flex;
  align-items: center;
  width: 90%;
  margin: 20rpx auto;
  border-bottom: 2rpx solid #e8e8e8;
}

.icon {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx;
}

button {
  margin-top: 30rpx;
  background: #c20c0c;
  width: 90%;
  border-radius: 30rpx;
  height: 60rpx;
  font-size: 40rpx;
  line-height: 60rpx;
  color: white;
}

.reset-password {
  margin-top: 15rpx;
  font-size: 30rpx;
  border-bottom: 2rpx solid;
}