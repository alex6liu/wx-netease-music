/* pages/songList/songList.wxss */
.songlist-info-container{
  background: black;
  color: white;
  padding: 20rpx 10rpx;
}
/* 第一排 */
.creator-info-container{
  display: flex;
  padding: 20rpx;
}
.songlist-cover-container{
  position: relative;
}
.songlist-image{
  width:200rpx;
  height:200rpx;
}
.songlist-playcount{
  font-size: 25rpx;
  position: absolute;
  right: 10rpx;
}
.songlist-title-container{
  padding:20rpx;
}
.songlist-title {
  font-size: 35rpx;
}
.creator-info {
  display: flex;
  margin-top: 20rpx;
}
.creator-avatar {
  width: 50rpx;
  height: 50rpx;
}
.creator-name {
  font-size: 30rpx;
}
/* 第二排 */
.songList-operation-container {
  display: flex;
  justify-content: space-around;
}
.single-operation {
  display: flex;
  flex-direction: column;
}
.operation-icon{
  width: 40rpx;
  height: 40rpx;
}
.operation-text{
  font-size: 25rpx;
}