/* components/choice/choice.wxss */
.index-category {
  color: black;
  display: flex;
  justify-content: space-around;
}

.category-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-container {
  background: #c20c0c;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.fm, .recommend, .playlist, .board {
  width: 50rpx;
  height: 50rpx;
}

.fm-text, .recommend-text, .playlist-text, .board-text {
  font-size: 25rpx;
}
